
{% extends "_main.jinja" %}

{% block title %} Technická podpora {% endblock %}
{% block main %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">


</head>
<body>
    
<div class="container register">
            <div class="row">
                <div class="col-md-12">
                        <div class="tab-pane fade show active text-align form-new" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <h3 class="register-heading style=">Technická podpora</h3>
                            <div class="row register-form">
                                <div class="col-md-12">
                                    <form method="post" autocomplete="off" name="google-sheet">
                                        <span>POPIS ZÁVADY/PROBLÉMU</span>
                                        <div class="form-group">
                                            <input type="text" name="ZÁVADA" class="form-control" placeholder="" value="" required=""/>
                                        </div>
                                        <div class="form-group">
                                        <span>NALÉHAVOST</span>
                                            <input type="text" name="NALÉHAVOST" class="form-control" placeholder="ASAP/Štandard/Počká " value="" required=""/>
                                        </div>
                                        <span>EVIDENČNÉ/VÝROBNÉ ČÍSLO</span>
                                        <div class="form-group">
                                            <input type="number" name="ČÍSLO" class="form-control" placeholder="Uvedené na mosadznej tabulke" value="" required=""/>
                                        </div>
                                        <span>TRUCK</span>
                                        <div class="form-group">
                                            <input type="text" name="UMÍSTNENÍ" class="form-control" placeholder="Česká/Hlavák/Šili/.. " value="" required=""/>
                                        </div>
                                        <span>KOFIPEOPLE</span>
                                        <div class="form-group">
                                            <input type="text" name="KOFIPEOPLE" class="form-control" placeholder="Jméno " value="" required=""/>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" name="submit" class="btn btn-primary" value="ODOSLAŤ" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
          
          <script>
            const scriptURL = 'https://script.google.com/macros/s/AKfycbwukCEdQ1-qQGxZMLe_dlevxvr5AlLzfy_yTvo9kJy4fusE7fOR/exec'
            const form = document.forms['google-sheet']
          
            form.addEventListener('submit', e => {
              e.preventDefault()
              fetch(scriptURL, { method: 'POST', body: new FormData(form)})
                .then(response => alert("Děkujeme za vyplnení!"))
                .catch(error => console.error('Error!', error.message))
            })
          </script>

        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>
            

{% endblock %}