
{% extends "_main.jinja" %}

{% block title %} Mlýnky {% endblock %}
{% block main %}
    
<div class="container register">
            <div class="row">
                <div class="col-md-12">
                        <div class="tab-pane fade show active text-align form-new" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <h3><b>Mlýnky</b></h3>
                            <div class="row register-form">
                                <div class="col-md-12">
                                    <form method="post" autocomplete="off" name="google-sheet">
                                        <span class="text-brown"><b>TRUCK</b></span>
                                        <div class="form-group">
                                            <input type="text" name="TRUCK" class="form-control text-brown" placeholder="Česká/Hlavák/Šili/.. " value="" required=""/>
                                        </div>
                                        <span class="text-brown"><b>NÁLEPKA</b></span>
                                        <div class="form-group">
                                            <input type="number" name="NÁLEPKA" class="form-control text-brown" placeholder="" value="" required=""/>
                                        </div>
                                        <span class="text-brown"><b>SC</b></span>
                                        <div class="form-group">
                                            <input type="number" name="SC" class="form-control text-brown" placeholder="" value="" required=""/>
                                        </div>
                                        <span class="text-brown"><b>DC</b></span>
                                        <div class="form-group">
                                            <input type="number" name="DC" class="form-control text-brown" placeholder="" value="" required=""/>
                                        </div>

                                        <div class="form-group">
                                            <div class="btn-center">
                                            <input type="submit" name="submit" class="btn btn-primary" value="ODOSLAŤ" />
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
          
          <script>
            const scriptURL = 'https://script.google.com/macros/s/AKfycbxlXVBBVUxb6yQ2RWzFq5O9KFyQehiDOb4zJw5VlCR_cp8K8Hs/exec'
            const form = document.forms['google-sheet']
          
            form.addEventListener('submit', e => {
              e.preventDefault()
              fetch(scriptURL, { method: 'POST', body: new FormData(form)})
                .then(response => alert("Děkujeme za vyplnení!"))
                .catch(error => console.error('Error!', error.message))
            })
          </script>

        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
   

{% endblock %}