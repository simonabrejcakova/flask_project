{% extends "_main.jinja" %}

{% block title %} Locations {% endblock %}

{% block main %}



<h2> Locations </h2>
<a href={{ url_for(".view_add_location") }} role="button" class="btn btn-primary">Add new location</a>

{# CREATE TABLE #}
<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Title</th>
    </tr>
  </thead>
  <tbody>
    {# TABLE LOOP #}
    {% for location in locations %}
        <tr>
            <th> {{ location.id }}</td>
            <td> <a href={{ url_for(".view_location_editor", loc_id=location.id) }}> {{ location.title }} </a> </td>
        </tr>
    {% endfor %}
  </tbody>
</table>





{# PAGINATION #}
<ul class="pagination justify-content-center mt-3">

{# add previous button #}
{% if paginate.has_prev %}
    <li class="page-item">
        <a class="page-link" href={{url_for(".view_location", page=paginate.prev_num)}} >Previous</a>
    </li>
{% endif %}


{# ADD NUMBERED LINKS #}
{%- for page in paginate.iter_pages() %}
    {% if page %}
        {% if page != paginate.page %}
            <li class="page-item"> <a class="page-link" href={{ url_for(".view_location", page=page) }}>{{page}}</a></li>
        {% else %}
            <li class="page-item disabled"><a class="page-link">{{ page }}</a></li>
        {% endif %}
    {% else %}
        <li class="page-item"><span class="ellipsis"> ...</span></li>
    {% endif %}
{%- endfor %}

{# add next button #}
{% if paginate.has_next %}
    <li class="page-item">
        <a class="page-link" href={{url_for(".view_location", page=paginate.next_num)}} >Next</a>
    </li>
{% endif %}
</ul>
{% endblock %}